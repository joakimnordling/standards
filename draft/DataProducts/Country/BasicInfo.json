{
  "openapi": "3.0.2",
  "info": {
    "title": "Basic Country Info",
    "description": "Data Product for basic country info",
    "version": "1.0.0"
  },
  "paths": {
    "/Country/BasicInfo": {
      "post": {
        "summary": "Country/BasicInfo",
        "description": "Information about the country",
        "operationId": "request_Country_BasicInfo",
        "parameters": [
          {
            "description": "Optional consent token",
            "required": false,
            "schema": {
              "title": "X-Consent-Token",
              "type": "string",
              "description": "Optional consent token"
            },
            "name": "x-consent-token",
            "in": "header"
          },
          {
            "description": "The login token. Value should be \"Bearer [token]\"",
            "required": false,
            "schema": {
              "title": "Authorization",
              "type": "string",
              "description": "The login token. Value should be \"Bearer [token]\""
            },
            "name": "authorization",
            "in": "header"
          },
          {
            "description": "The bare domain of the system that provided the token.",
            "required": false,
            "schema": {
              "title": "X-Authorization-Provider",
              "type": "string",
              "description": "The bare domain of the system that provided the token."
            },
            "name": "x-authorization-provider",
            "in": "header"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasicCountryInfoRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BasicCountryInfoResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BasicCountryInfoRequest": {
        "title": "BasicCountryInfoRequest",
        "required": ["code"],
        "type": "object",
        "properties": {
          "code": {
            "title": "Code",
            "maxLength": 2,
            "minLength": 2,
            "type": "string",
            "description": "ISO 3166-1 alpha-2 code for the country",
            "example": "FI"
          }
        }
      },
      "BasicCountryInfoResponse": {
        "title": "BasicCountryInfoResponse",
        "required": ["code", "name", "area", "languages"],
        "type": "object",
        "properties": {
          "code": {
            "title": "Code",
            "maxLength": 2,
            "minLength": 2,
            "type": "string",
            "description": "ISO 3166-1 alpha-2 code for the country",
            "example": "FI"
          },
          "name": {
            "title": "Name",
            "type": "string",
            "description": "The name of the country",
            "example": "Finland"
          },
          "area": {
            "title": "Area",
            "type": "number",
            "description": "The area of the country in km^2",
            "example": 338455
          },
          "languages": {
            "title": "Official languages",
            "maxLength": 2,
            "minLength": 2,
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 2,
              "maxLength": 2
            },
            "description": "ISO 639-1 language codes for the official languages",
            "example": ["fi", "sv"]
          },
          "capital": {
            "title": "Capital",
            "allOf": [
              {
                "$ref": "#/components/schemas/Capital"
              }
            ],
            "description": "The capital of the country, legislative if multiple"
          }
        }
      },
      "Capital": {
        "title": "Capital",
        "required": ["name", "lat", "lon"],
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string",
            "description": "The name of the capital of the Country",
            "example": "Helsinki"
          },
          "lat": {
            "title": "Latitude",
            "maximum": 90.0,
            "minimum": -90.0,
            "type": "number",
            "description": "The latitude coordinate of the Capital",
            "example": 60.170833
          },
          "lon": {
            "title": "Longitude",
            "maximum": 180.0,
            "minimum": -180.0,
            "type": "number",
            "description": "The longitude coordinate of the Capital",
            "example": 24.9375
          }
        }
      },
      "HTTPValidationError": {
        "title": "HTTPValidationError",
        "type": "object",
        "properties": {
          "detail": {
            "title": "Detail",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "ValidationError": {
        "title": "ValidationError",
        "required": ["loc", "msg", "type"],
        "type": "object",
        "properties": {
          "loc": {
            "title": "Location",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "msg": {
            "title": "Message",
            "type": "string"
          },
          "type": {
            "title": "Error Type",
            "type": "string"
          }
        }
      }
    }
  }
}
